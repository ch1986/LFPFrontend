<form class="form-horizontal" action="{{ path('AppBundle_player_new', {'clubId': clubId}) }}" method="post" >
    <div class="form-group">
        <label class="col-sm-1 control-label">Nombre<span class="asterisk">*</span></label>
        <div class="col-sm-10 col-sm-offset-1">
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">Apodo<span class="asterisk">*</span></label>
        <div class="col-sm-10 col-sm-offset-1">
            {{ form_widget(form.nickname, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">Dorsal<span class="asterisk">*</span></label>
        <div class="col-sm-10 col-sm-offset-1">
            {{ form_widget(form.dorsal, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">Posici√≥n<span class="asterisk">*</span></label>
        <div class="col-sm-10 col-sm-offset-1">
            {{ form_widget(form.position, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    {{ form_rest(form) }}
    <div>
        <input class="btn btn-primary center-block" type="submit" value="Guardar" />
    </div>
</form>